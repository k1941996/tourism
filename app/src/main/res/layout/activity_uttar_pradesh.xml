<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kshitijsaini.tourism.UttarPradesh">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/uptaj"
                android:onClick="taj"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/ganges"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/agrafort"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/ota"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/akbar"

                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
